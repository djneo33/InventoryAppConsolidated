<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:screenOrientation="portrait"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.omega.inventoryConsolidated.finalScreen">

    <EditText
        android:layout_width="160px"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/quantity"
        android:hint="..."
        android:layout_marginTop="37dp"
        android:minLines="1"
        android:maxLines="4"
        android:layout_below="@+id/finalTextBottom"
        android:layout_centerHorizontal="true"
        android:textColorHint="@color/abc_input_method_navigation_guard" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/finalTextTop"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/finalTextBottom"
        android:layout_below="@+id/finalTextTop"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="160px"
        android:layout_height="wrap_content"
        android:id="@+id/location"
        android:layout_below="@+id/quantity"
        android:layout_centerHorizontal="true"
        android:hint="..."
        android:lines="1"
        android:layout_alignParentStart="false"
        android:textColorHint="@color/abc_input_method_navigation_guard"
        android:layout_alignParentLeft="false"
        android:singleLine="true"/>

    <EditText
        android:layout_width="600px"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/comments"
        android:hint="Comments"
        android:lines="1"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textColorHint="@color/abc_input_method_navigation_guard" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirm"
        android:id="@+id/finalButton"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Quantity:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:layout_alignBaseline="@+id/quantity"
        android:layout_alignBottom="@+id/quantity"
        android:layout_toLeftOf="@+id/finalTextBottom"
        android:layout_toStartOf="@+id/finalTextBottom" />

    <TextView
        android:text="Location:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:layout_alignBaseline="@+id/location"
        android:layout_alignBottom="@+id/location"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView" />
</RelativeLayout>
